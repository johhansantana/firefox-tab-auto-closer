{
  "manifest_version": 2,
  "name": "Tab Auto-Closer",
  "version": "1.1.0",
  "description": "Automatically closes tabs after a customizable time period",
  "homepage_url": "https://github.com/johhansantana/firefox-tab-auto-closer",
  "permissions": [
    "tabs",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Tab Auto-Closer"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  }
}
